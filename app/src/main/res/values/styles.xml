<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.News</item>
    </style>

    <style name="ActionBar.Solid.News" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/blue</item>

    </style>

    <style name="ArticleTheme" parent="AppTheme.NoActionBar">
        <item name="actionBarStyle">@style/ActionBar.Solid.News.noTitle</item>
    </style>

    <style name="ActionBar.Solid.News.noTitle" parent="@style/ActionBar.Solid.News">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/logo</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ArticleTheme2" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/primaryText2</item>
        <item name="android:textColorSecondary">@color/secondaryText2</item>

    </style>


    <style name="ArticleTheme3" parent="ArticleTheme2">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/primaryText2</item>
        <item name="android:textColorSecondary">@color/white</item>

        <item name="android:actionBarStyle">@style/ArticleTheme3.ActionBarStyle</item>

    </style>


    <style name="ArticleTheme4" parent="ArticleTheme2">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/primaryText2</item>
        <item name="android:textColorSecondary">@color/secondaryText2</item>

        <item name="android:actionBarStyle">@style/ArticleTheme3.ActionBarStyle</item>

    </style>


    <style name="ArticleTheme3.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/ArticleTheme3.ActionBar.TitleTextStyle</item>
    </style>

    <style name="ArticleTheme3.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/red</item>
    </style>


</resources>
